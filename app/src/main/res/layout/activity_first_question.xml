<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/first_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="johnbere.chemistrydd.activities.FirstQuestion"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/q1Txt"
        android:layout_width="203dp"
        android:layout_height="31dp"
        android:layout_marginBottom="449dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/q1Info"
        app:layout_constraintEnd_toStartOf="@+id/q1Timer"
        app:layout_constraintStart_toEndOf="@+id/q1Attempts" />

    <TextView
        android:id="@+id/q1Timer"
        android:layout_width="34dp"
        android:layout_height="30dp"
        android:text="10"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/q1Attempts"
        android:layout_width="90dp"
        android:layout_height="23dp"
        android:text="Attempts:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/q1Reset"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginTop="458dp"
        android:text="Reset"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/q1Attempts" />

    <Button
        android:id="@+id/q1Info"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginEnd="109dp"
        android:layout_marginStart="110dp"
        android:text="Help"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/q1btn"
        app:layout_constraintStart_toEndOf="@+id/q1Reset" />

    <Button
        android:id="@+id/q1btn"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginTop="449dp"
        android:text="Submit"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/q1Timer" />

</android.support.constraint.ConstraintLayout>
